<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GettingStarted">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonGpsCenter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:onClick="buttonGpsCenterClick"
                android:text="Center" />

            <Button
                android:id="@+id/buttonGpsCenterContinuous"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:onClick="buttonGpsCenterContinuousClick"
                android:text="GPS" />

            <Button
                android:id="@+id/buttonDownloadMap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Download map"
                android:onClick="buttonDownloadMapClick"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>